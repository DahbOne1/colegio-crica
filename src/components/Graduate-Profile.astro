---
import {Image} from 'astro:assets'
import Clases from '../images/complements/clases.webp'

const ITEMS_GRADUATE_PROFILE = [
    {
        urlIcon: "src/components/icons/Sport.svg",
        name: "Apoyo al deporte y las artes",
        description: "Promovemos el equilibrio entre mente y cuerpo, incentivando el amor por el deporte y las artes.",
    },
    {
        urlIcon: "src/components/icons/Leaf.svg",
        name: "Espíritu de servicio y generosidad",
        description: "Valoramos la generosidad y el servicio, formando individuos comprometidos con dar y servir a los demás.",
    },
    {
        urlIcon: "src/components/icons/User.svg",
        name: "Amor a la familia y sociedad",
        description: "Fomentamos el amor y respeto por la familia, la sociedad y el país, creando ciudadanos responsables y comprometidos.",
    },
    {
        urlIcon: "src/components/icons/Heart.svg",
        name: "Amor y Espiritualidad",
        description: "Nuestros egresados aprenden a amar a Dios y llevar una vida guiada por principios espirituales.",
    }
    
]
import ItemGraduateProfile from './Item-Graduate-Profile.astro'
---

<section class="py-20 flex flex-col items-center gap-10 px-6 text-[#266388] lg:flex-row">
    <div class="w-full md:w-5/6 lg:w-2/5 lg:pl-4">
        <h2 class="font-extrabold text-4xl md:text-5xl lg:text-4xl">PERFIL DE NUESTROS EGRESADOS</h2>
        <span class="font-semibold text-3xl block mt-4 md:text-4xl lg:text-3xl`">Formando líderes con valores</span>
        <img src={Clases.src} alt="Imagen edificio principal del Colegio Crica en Chilpancingo, Guerrero" class="w-full h-full mt-4 rounded-lg object-cover object-left-top lg:h-52">
    </div>
    <article class="w-full lg:w-3/5 md:p-1">
        <ol class="w-full flex gap-4 flex-wrap justify-center">
            {
                ITEMS_GRADUATE_PROFILE.map((itemGraduateProfile)=>(
                    <li class="w-full md:w-5/12">
                        <ItemGraduateProfile {...itemGraduateProfile}></ItemGraduateProfile>
                    </li>
                ))
            }
        </ol>
    </article>
</section>
