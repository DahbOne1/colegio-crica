---
import {Image} from 'astro:assets'
import MexicoFlag from '../images/MexicoFlag.png'
import EUAFlag from '../images/EUAFlag.png'
import FranceFlag from '../images/FranceFlag.png'
import Logo from '../images/Logo.png'
---
<section class="hidden md:block header-below w-full px-8 py-1 font-extrabold fixed z-50 rounded-b-xl ">
    <div class="text-below text-[#266388] flex items-center justify-center ">
        <div class="w-10/12 flex pt-4 lg:7/12">
            <div class="w-1/3">
                <a href="/colegio-crica/"> <img src={Logo.src} alt="Lodo del colegio crica" class="w-40"> </a>
            </div>
            <nav class="2/3">
                <ul class="flex gap-6 items-center">
                    <a href="/colegio-crica/" class="text-sm item-menu relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">INICIO</a>
                    <div class=" py-1 container-dropdown relative cursor-pointer">
                        <span class="text-sm inline-flex item-menu">OFERTA EDUCATIVA
                            <svg class="item-menu ml-0 lg:ml-1 md:pb-1 size-6 text-[#217aa1] " viewBox="0 0 20 20" fill="currentcolor" aria-hidden="true" data-slot="icon">
                                <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                              </svg>
                        </span>
                        <div class="dropdown  w-full absolute  bg-[#f9f9f9] p-4 rounded-xl shadow-md shadow-[#217aa1] top-8 left-0 hidden">
                            <ul class="flex flex-col gap-1 ">
                                <a href="/colegio-crica/educational-levels/preschool" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">PREESCOLAR</a>
                                <a href="/colegio-crica/educational-levels/elementary-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">PRIMARIA</a>
                                <a href="/colegio-crica/educational-levels/high-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">SECUNDARIA</a>
                                <a href="/colegio-crica/educational-levels/preparatory-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">BACHILLERATO</a>
                            </ul>
                        </div>
                    </div>                    
                    <a href="/colegio-crica/facilities/" class="text-sm item-menu relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">INSTALACIONES</a> 
                </ul>
            </nav>
        </div>
        
        <div class="w-2/12 flex items-center justify-center text-xs lg:w-5/12">
            <div class="flex items-center justify-between bg-[#F1F1F1] gap-x-14 p-2 rounded-md">
                <a href="/colegio-crica/registrations/" class="hover:bg-[#f9fbfb] hover:text-[#217aa1] bg-[#217aa1] py-1 px-2 text-[#F1F1F1] transition-all rounded-sm">INSCRIPCIONES</a>
                <!-- 
                <ul class="flex gap-3">
                    <li> <img src={MexicoFlag.src} class="w-7 cursor-pointer"/> </li>
                    <li> <img src={EUAFlag.src} class="w-7 cursor-pointer"> </li>
                    <li> <img src={FranceFlag.src} class="w-7 cursor-pointer"> </li>
                </ul>-->
            </div>
            
        </div>

    </div>
</section>


<section>
  <nav class="block md:hidden bg-[#266388]">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/colegio-crica/"> <img src={Logo.src} alt="Lodo del colegio crica" class="w-40"> </a>
      <button data-collapse-toggle="navbar-dropdown" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200 " aria-controls="navbar-dropdown" aria-expanded="false">
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
        <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 text-[#266388]">
          <li>
            <a href="/colegio-crica/" class="block py-2 px-3 text-white bg-[#266388] rounded-sm" aria-current="page">Inicio</a>
          </li>
          <li>
              <button id="dropdownNavbarLink" data-dropdown-toggle="dropdownNavbar" class="flex items-center justify-between w-full py-2 px-3 rounded-sm hover:bg-[#266388]/20 ">OFERTA EDUCATIVA <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
              </svg></button>
              <!-- Dropdown menu -->
              <div id="dropdownNavbar" class="z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-10/12 ">
                  <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownLargeButton">
                    <li>
                      <a href="/colegio-crica/educational-levels/preschool" class="block px-4 py-2 hover:bg-[#266388]/20">PREESCOLAR</a>
                    </li>
                    <li>
                      <a href="/colegio-crica/educational-levels/elementary-school/" class="block px-4 py-2 hover:bg-[#266388]/20">PRIMARIA</a>
                    </li>
                    <li>
                      <a href="/colegio-crica/educational-levels/high-school/" class="block px-4 py-2 hover:bg-[#266388]/20">SECUNDARIA</a>
                    </li>
                    <li>
                      <a href="/colegio-crica/educational-levels/preparatory-school/" class="block px-4 py-2 hover:bg-[#266388]/20">BACHILLERATO</a>
                    </li>
                  </ul>
              </div>
          </li>
          <li>
            <a href="/colegio-crica/facilities/" class="block py-2 px-3 rounded-sm hover:bg-[#266388]/20">INSTALACIONES</a>
          </li>
          <li>
            <a href="/colegio-crica/registrations/" class="block py-2 px-3 rounded-sm hover:bg-[#266388]/20">INSCRIPCIONES</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
</section>

<style>

    .header-below{
        animation: enhance-header ease-in-out both;
        animation-timeline: scroll(root block);
        animation-range: 0 200px;
    }

    .item-menu{
        animation: enhance-text ease-in-out both;
        animation-timeline: scroll(root block);
        animation-range: 0 200px;
    }

    @keyframes enhance-header {
        to{
            background-color: #3aa1cd82;
            backdrop-filter: blur(10px);
        }
    }

    @keyframes enhance-text {
        to{
            color: #0b4b66;
        }
    }

    .container-dropdown:hover > .dropdown{
        display: block;
    }

</style>
