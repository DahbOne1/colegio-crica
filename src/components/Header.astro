---
import {Image} from 'astro:assets'
import MexicoFlag from '../images/MexicoFlag.png'
import EUAFlag from '../images/EUAFlag.png'
import FranceFlag from '../images/FranceFlag.png'
import Logo from '../images/Logo.png'
---
<section class="header-below w-full px-8 py-1 font-extrabold fixed z-50 rounded-b-xl ">
    <div class="text-below text-[#266388] flex items-center justify-center ">
        <div class="w-7/12 flex pt-4 ">
            <div class="w-1/3">
                <a href="/#home"> <img src={Logo.src} alt="Lodo del colegio crica" class="w-40"> </a>
            </div>
            <nav class="2/3">
                <ul class="flex gap-6 items-center">
                    <a href="/#home" class=" item-menu relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">INICIO</a>
                    <div class=" py-1 container-dropdown relative cursor-pointer">
                        <span class=" inline-flex item-menu">OFERTA EDUCATIVA
                            <svg class="item-menu ml-1 size-6 text-[#217aa1]" viewBox="0 0 20 20" fill="currentcolor" aria-hidden="true" data-slot="icon">
                                <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                              </svg>
                        </span>
                        <div class="dropdown  w-full absolute  bg-[#f9f9f9] p-4 rounded-xl shadow-md shadow-[#217aa1] top-8 left-0 hidden">
                            <ul class="flex flex-col gap-1">
                                <a href="/educational-levels/preschool" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">PREESCOLAR</a>
                                <a href="/educational-levels/elementary-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">PRIMARIA</a>
                                <a href="/educational-levels/high-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">SECUNDARIA</a>
                                <a href="/educational-levels/preparatory-school/" class="relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">BACHILLERATO</a>
                            </ul>
                        </div>
                    </div>                    
                    <a href="/facilities/" class="item-menu relative after:bg-[#217aa1] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">INSTALACIONES</a>
                    
                </ul>
            </nav>
        </div>
        
        <div class="w-5/12 flex items-center justify-center text-xs">
            <div class="flex items-center justify-between bg-[#F1F1F1] gap-x-14 p-2 rounded-md">
                <a href="/registrations/" class="hover:bg-[#f9fbfb] hover:text-[#217aa1] bg-[#217aa1] py-1 px-2 text-[#F1F1F1] transition-all rounded-sm">INSCRIPCIONES</a>
                <ul class="flex gap-3">
                    <li> <img src={MexicoFlag.src} class="w-7 cursor-pointer"/> </li>
                    <li> <img src={EUAFlag.src} class="w-7 cursor-pointer"> </li>
                    <li> <img src={FranceFlag.src} class="w-7 cursor-pointer"> </li>
                </ul>
            </div>
            
        </div>

       

          
    </div>
</section>

<style>

    .header-below{
        animation: enhance-header ease-in-out both;
        animation-timeline: scroll(root block);
        animation-range: 0 200px;
    }

    .item-menu{
        animation: enhance-text ease-in-out both;
        animation-timeline: scroll(root block);
        animation-range: 0 200px;
    }

    @keyframes enhance-header {
        to{
            background-color: #3aa1cd82;
            backdrop-filter: blur(10px);
        }
    }

    @keyframes enhance-text {
        to{
            color: #0b4b66;
        }
    }

    .container-dropdown:hover > .dropdown{
        display: block;
    }

</style>
