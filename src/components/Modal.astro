<!-- Modal oculto inicialmente -->
<div id="modal" class={`fixed inset-0 hidden items-center justify-center bg-gray-800 bg-opacity-50 `}>
    <div class="bg-white rounded-lg shadow-lg max-w-sm flex flex-col items-center text-[#266388] md:flex md:flex-row md:max-w-3xl lg:max-w-4xl">
        <img id="imgModal"  class="rounded-lg object-cover w-full h-60 md:h-96 md:w-1/3">
    
        <div class="py-8 w-full px-4 md:py-0 md:w-2/3">
            <h2 id="nameModal" class="text-3xl font-bold"></h2>
            <p id="textModal" class="mt-2 text-sm"></p>
            <button  class="closeModal mt-4 px-4 py-2 text-white rounded-lg bg-[#217aa1] hover:bg-[#217aa1]/80">Cerrar</button>
        </div>
    </div>
  </div>

  <script>
    //Cerrar modal
    const modal = document.getElementById('modal');

    const button = document.querySelector('button.closeModal');
    button?.addEventListener('click', () => {
        modal?.classList.add('hidden');
        modal?.classList.remove('flex');
    });

  </script>