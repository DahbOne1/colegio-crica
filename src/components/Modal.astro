---
export interface Props {
    name: string
    description: string
    urlImage: string
    descriptionImage: string
}
const {name, description, urlImage, descriptionImage} = Astro.props

---


<section id='default-modal' tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-[#3aa0cd]/30">
    <div class="relative p-4 w-9/12 0">

        <div class="relative bg-[#f2f9fd] rounded-lg shadow">
            <!-- Modal body -->
            <div class="flex w-full">
                <div class="w-1/3">
                    <img src={urlImage} alt="" class="w-full h-80 rounded-l-lg object-cover object-left-top">
                </div>
                <div class="w-2/3 p-4 text-right">
                    <button type="button" class="text-[#266388] bg-transparent hover:bg-[#3aa0cd] hover:text-white rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="default-modal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                    </button>
                    <p class="text-left leading-relaxed text-[#266388] mt-5">
                    {description}
                    </p>
                </div>       
            </div>
        </div>
    </div>
</section>
