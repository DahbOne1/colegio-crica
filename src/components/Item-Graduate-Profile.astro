---
export interface Props {
    name: string
    description: string
    urlIcon: string
}

const {name, description, urlIcon} = Astro.props

---

<div class="bg-[#3aa0cd]/20 rounded-md px-4 py-6 md:px-2 md:py-5 md:h-40">
    <h6 class="flex gap-2 font-semibold text-xl py-2 md:text-md"> <img  src={urlIcon} alt="">  {name}</h6>
    <p class="text-lg text-justify md:text-sm">{description}</p>
</div>