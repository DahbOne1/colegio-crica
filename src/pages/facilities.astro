	}

	.gallery div {
		animation: reveal linear both;
		animation-timeline: view();
		animation-range: entry 5% cover 25%;
	}

	@keyframes reveal {
		from {
			opacity: 0.2;
			translate: 0 20px;
		}
		to {
			opacity: 1;
			translate: 0 0;
		}
	}
</style>